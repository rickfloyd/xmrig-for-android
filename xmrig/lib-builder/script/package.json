{
  "name": "trading-anarchy-android-compute-engine",
  "version": "2025.1.0",
  "description": "Professional cryptocurrency mining engine for Android devices with XMRig integration and React Native interface",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "web": "react-native run-web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "build": "npm run build:android",
    "build:android": "cd android && ./gradlew assembleDebug",
    "build:android:release": "cd android && ./gradlew assembleRelease",
    "build:bundle": "cd android && ./gradlew bundleRelease",
    "build:clean": "cd android && ./gradlew clean",
    "build:native": "cmake --build build/cmake --config Release",
    "build:js": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "clean": "npm run build:clean && npx react-native clean",
    "reset": "npm run clean && rm -rf node_modules && npm install",
    "postinstall": "npx react-native setup-ios-permissions || true",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "release": "standard-version",
    "docs": "typedoc --out docs src/",
    "analyze": "npx react-native-bundle-analyzer",
    "profile": "npx react-native profile-memory"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-native": "0.76.5",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "react-native-device-info": "^12.0.0",
    "react-native-fs": "^2.20.0",
    "react-native-background-job": "^1.2.4",
    "react-native-thermal-state": "^1.0.0",
    "react-native-battery-status": "^1.1.0",
    "react-native-network-info": "^5.2.1",
    "react-native-permissions": "^5.0.0",
    "react-native-splash-screen": "^3.3.0",
    "react-native-vector-icons": "^10.2.0",
    "react-native-paper": "^5.12.5",
    "react-native-charts-wrapper": "^0.6.1",
    "react-native-toast-message": "^2.2.1",
    "react-native-modal": "^13.0.1",
    "react-native-animatable": "^1.4.0",
    "react-native-linear-gradient": "^2.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.25.7",
    "@babel/plugin-transform-modules-commonjs": "^7.25.7",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@babel/runtime": "^7.25.7",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@react-native/babel-preset": "0.76.5",
    "@react-native/eslint-config": "0.76.5",
    "@react-native/metro-config": "0.76.5",
    "@react-native/typescript-config": "0.76.5",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.8.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "detox": "^20.28.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "metro": "^0.81.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.3.3",
    "react-test-renderer": "18.3.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tradinganarchy/xmrig-for-android.git"
  },
  "keywords": [
    "cryptocurrency",
    "mining",
    "xmrig",
    "android",
    "react-native",
    "blockchain",
    "monero",
    "mobile-mining",
    "compute-engine",
    "trading-anarchy"
  ],
  "author": {
    "name": "Trading Anarchy Team",
    "email": "dev@tradinganarchy.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tradinganarchy/xmrig-for-android/issues"
  },
  "homepage": "https://github.com/tradinganarchy/xmrig-for-android#readme",
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/android/",
      "<rootDir>/ios/",
      "<rootDir>/build/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-vector-icons|react-native-paper)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/**/*.spec.{js,jsx,ts,tsx}",
      "!src/types/**/*"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run test && npm run build",
      "postchangelog": "npm run docs"
    }
  },
  "detox": {
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "testBinaryPath": "android/app/build/outputs/apk/androidTest/debug/app-debug-androidTest.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3_API_35"
        }
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "testBinaryPath": "android/app/build/outputs/apk/androidTest/release/app-release-androidTest.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3_API_35"
        }
      }
    }
  },
  "react-native": {
    "dependencies": {
      "trading-anarchy-engine": {
        "platforms": {
          "android": {
            "sourceDir": "../android/src/main/java/com/tradinganarchy/computeengine",
            "packageImportPath": "import com.tradinganarchy.computeengine.TradingAnarchyEngineModule;"
          }
        }
      }
    }
  },
  "bundlesize": [
    {
      "path": "./android/app/build/outputs/bundle/release/app-release.aab",
      "maxSize": "50 MB",
      "compression": "none"
    }
  ]
}